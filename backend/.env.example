# 应用配置
APP_NAME=Vibe Route
APP_VERSION=0.1.0
DEBUG=True

# 安全配置
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# 数据库配置
DATABASE_TYPE=sqlite
SQLITE_DB_PATH=data/vibe_route.db

# MySQL 配置 (当 DATABASE_TYPE=mysql 时使用)
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=vibe_route
# MYSQL_PASSWORD=your-password
# MYSQL_DB=vibe_route

# PostgreSQL 配置 (当 DATABASE_TYPE=postgresql 时使用)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=vibe_route
# POSTGRES_PASSWORD=your-password
# POSTGRES_DB=vibe_route

# Redis 配置
REDIS_URL=redis://localhost:6379/0

# 文件存储路径
UPLOAD_DIR=data/uploads
TEMP_DIR=data/temp
EXPORT_DIR=data/exports
ROAD_SIGN_DIR=data/road_signs

# CORS 配置
# CORS_ORIGINS=http://localhost:5173,http://localhost:3000